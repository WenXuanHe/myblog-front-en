{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "paths": {
            "$helper/*": ["public/src/helper/*"],
            "$apis/*": ["public/src/apis/*"]
        }
    },
    "include": [
        "public/src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}