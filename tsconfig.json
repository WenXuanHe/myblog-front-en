{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "dom"],
        "jsx": "react",
        "allowJs": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "paths": {
            "$helper/*": ["public/src/helper/*"],
            "$apis/*": ["public/src/apis/*"],
            "$utils/*":["public/src/utils/*"],
            "$redux/*": ["public/src/redux/*"],
            "$components/*": ["public/src/components/*"],
            "$routes/*": ["public/src/routes/*"],
            "$styles/*": ["public/src/styles/*"],
            "$actions/*": ["public/src/actions/*"],
            "$views/*": ["public/src/views/*"]
        }
    },
    // "include": [
    //     "public/src/**/*.tsx"
    // ],
    "exclude": [
        "node_modules"
    ]
}